{
  "unique Tags": {
    "Description": "set tag to the desired tag and it will make them unique blues,Blues will become Blues",
    "Category": "OM",
    "Command": "$dest=$(pf);$tag='';got $dest | sot -Transform {$_.$tag = ($_.$tag | ForEach-Object { $_.ToLower() } | Select-Object -Unique | ForEach-Object { (Get-Culture).TextInfo.ToTitleCase($_) });$_ } -PassThru -whatif"
  },
  "Set Year from Path": {
    "Description": "Extract a 4-digit year from each file's path and set it as the Year tag",
    "Category": "OM",
    "Command": "got $dest | % { $year = [regex]::Match($_.Path, '\\b(19|20|21)\\d{2}\\b').Value; if($year){ $_ | sot -Tags @{ Year = $year } -WhatIf -PassThru } }"
  },
  "add Composertag": {
    "Description": "add composertag; needs dest",
    "Category": "OM",
    "Command": "$tags=@{Composers=''};got $dest | sot -Tags $tags -PassThru -whatif ;got $dest -su"
  },
  "year in $path ->$year tag": {
    "Category": "OM",
    "Command": "GOT $dest| SOT -Transform { $_.Path -match '\\b(19|20)\\d{2}\\b'; $_.Year=$matches[0]; $_ } -PassThru -WhatIf",
    "Description": "year in the path, stick it in the $year tag"
  },
  "force discAndTracks": {
    "Description": "forces disc and track nuimbering",
    "Category": "OM",
    "Command": "Add-OMDiscNumbers -forceDiscs -forceTracks $dest -WhatIf;got $dest -su"
  },
  "Set Tags": {
    "Category": "OM",
    "Command": "$tags=@{AlbumArtists='';Artists=''};got $dest | sot -Tags $tags -WhatIf -PassThru",
    "Description": "set $dest and change the tags on that"
  },
  "FolderName->AlbumName": {
    "Category": "OM",
    "Command": "gci -dir $dest |%{$Al = $_.Name; GOT -Path $_ | SOT -Tags @{ Album = $Al } -WhatIf -PassThru}",
    "Description": "set $dest to artist and the albumsfoldername get put in the tags"
  },
  "trim whiteSpace in Tags": {
    "Category": "OM",
    "Command": "GOT $dest | SOT -Transform { $_.$tag =@( $_.$tag.split(',').trim()); $_ } -WhatIf -PassThru",
    "Description": "in$dest remove whitespace from $tag{AlbumArtists)"
  },
  "year-album ->albumtag": {
    "Category": "OM",
    "Command": " $album=($dest -split ' - ',2)[1] ; GOT -Path $dest | SOT -Tags @{Album=$album} -Force -PassThru ",
    "Description": "splits year-album name and updates albumtag"
  },
  "add Genrestag": {
    "Description": "add genres tagneeds dest",
    "Category": "OM",
    "Command": "$tags=@{Genres=' '};got $dest | sot -Tags $tags -PassThru -WhatIf;got $dest -su"
  },
  "empty tag": {
    "Description": "check if tag is empty",
    "Category": "OM",
    "Command": "$tag= \" \"; got $(pf)|Where-Object { !$_.$tag}"
  }
}
